{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "features/dashboard/components/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@types/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}